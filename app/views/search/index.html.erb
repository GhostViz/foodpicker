<style>
  .business-image {
    background-image:url(<%= @business_image %>);
    background-size: cover;
    background-position: center center;
    border-radius: 15px;
  }
</style>
<% content_for :navbar do %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="">FoodPicker</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <div class="collapse navbar-collapse form-group float-right">
    <%= form_tag("index",method: "get") do %>
      <div class="row">
      <div class="col-4 input-group">
        <%= label_tag(:q, "Food Type", class: 'input-group-addon') %>
        <%= text_field_tag(:foodtype, "", class: 'form-control', placeholder: @foodtype) %>
      </div>
      <div class="col-4 input-group">
        <%= label_tag(:q, "City, State", class: 'input-group-addon') %>
        <%= text_field_tag(:city, "", class: 'form-control', placeholder: @city) %>
      </div>
      <div class="col-4">
        <%= submit_tag("Pick Food", class: 'btn btn-primary btn-block') %>
      </div>
      </div>
    <% end %>
  </div>
</div>
</nav>
<% end %>
<div class="container">
<div class="jumbotron col-lg-12">
  <div class="row">
  <div class="col-lg-6 business-image">
  </div>
  <div class="col-lg-6">
    <h1><%= @business_name %></h1>
    <h3><%= @business_address %></h3>
    <h4><%= @business_city %></h4>
    <h4><%= @business_phone %></h4>
    <% if @business_name != "No Results" %>
    <h4>Rating: <%= @business_rating %></h4>
    <% end %>
    <p><%= @total_results %> results for: <%= @foodtype %>, <%= @city %></p>
  </div>
</div>
</div>
</div>
